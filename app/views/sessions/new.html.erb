<%= modal_dialog :signin, "Sign in with password", :area => "floating" do %>
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "signin json" }) do |f| %>
		<%= modal_body do %>
		  <%= f.error_notification %>
		  <%= base_errors_helper resource %>
		  <%= f.input :login, label: "Username or Email (your choice)" %></p>
		  <%= f.input :password %></p>
		  <% if devise_mapping.rememberable? -%>
				<%= f.input :remember_me, :checked => true, style: "margin:0px;" %> 
		  <% end -%>
		<% end %>
		<%= modal_footer do %>
		  <%= f.submit "Sign in", class: "submit_button" %>
			&nbsp;&nbsp;&nbsp;Forgot your password? Click <%= button_to_modal "here", new_user_password_path %>
		<% end %>
	<% end %>
<% end %>
