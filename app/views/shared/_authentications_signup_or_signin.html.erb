<% if current_user && false %>
	<h3>Manage Sign-in Services</h3>
<% end %>
<%# dialogHeader :sign_in, "", area: @area %>
  <div class="auth_signin <%= @area %>" >
    <%= render partial: 'shared/authentications_current' %>
    <%= render partial: 'shared/authentications_possible' %>
  </div>
  <% if !current_user %>
    <div class="sign <%= @area %>" >
	  <div class="prompt">Rather use a RecipePower account? <br></div>
		<div class="signin">
			<div class="prompt">Sign In</div>
		  <%= render partial: "shared/slug_signin" %>
		</div>
	  <div class="or" >OR</div>
	  <div class="signup">
			<div class="prompt">Sign Up</div>
		  <%= render partial: "shared/slug_signup" %>
		</div>
	</div>
  <% end %>
<%# dialogFooter %>
