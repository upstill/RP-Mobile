<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%# devise_error_messages! %>
  <%= form_errors_helper f, resource %>

  <%= f.input :username, label: "Username (Handle)" %>
  <%= f.input :fullname, label: "Full Name" %>
	<%= f.input :email, label: "Email (required)" %>

	<% if resource.password_required? %>
		<%= f.input :password %>
	<% end %>
  <div class="gobutton"><%= f.submit "Sign up" %></div>
<% end %>
