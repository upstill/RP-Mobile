<h1>Listing sites</h1>

<table>
  <tr>
    <th>Basics</th>
    <th>Tags</th>
    <th>Links</th>
  </tr>

<% @sites.each do |site| %>
  <tr>
	<td><b><%= site.name || "Defaults" %></b><br>
		<b>Site</b>: <%= site.site %><br>
		<b>Home</b>: <%= site.home %><br>
		<b>Sample</b>: <%= site.sample %><br>
		<b>Logo</b>: <%= site.logo %><br>
	</td>
    <td><%= site.tags %></td>
	<td><%= link_to 'Show', site %><br>
		<%= link_to 'Edit', edit_site_path(site) %><br>
		<%= link_to 'Destroy', site, confirm: 'Are you sure?', method: :delete %><br>
	</td>
  </tr>
  <tr></tr>
<% end %>
</table>

<br />

<%= link_to 'New Site', new_site_path %>
