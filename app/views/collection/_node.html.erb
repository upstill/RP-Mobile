<li class="<%= @node.css_class %>" 
		id="<%= @node.css_id %>"
		<%= %Q{style="display: none;"}.html_safe unless (@node.selected || @node.visible) %> >
	<a href="#"><%= @node.handle %></a>
	<% if add_path = @node.add_path %>
		<%= link_to "+", add_path, class: "mod_button" %>
	<% elsif delete_path = @node.delete_path %>
		<%= link_to_function "x", %Q{RP.content_browser.delete_element("#{delete_path}")}, class: "mod_button" %>
	<% end %>
</li>
