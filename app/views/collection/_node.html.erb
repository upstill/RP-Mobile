<li class="<%= @node.css_class %>" 
		id="<%= @node.css_id %>"
		<%= %Q{style="display: none;"}.html_safe unless (@node.selected || @node.visible) %> >
		<% if add_path = @node.add_path %>
			<div class="mod_box">
				<%= link_to "&plus;".html_safe, add_path, class: "mod_button" %>
			</div>
		<% elsif delete_path = @node.delete_path %>
			<div class="mod_box">
				<%= link_to_function "&times;".html_safe, %Q{RP.content_browser.delete_element("#{delete_path}")}, class: "mod_button" %>
			</div>
		<% end %>
	<%= link_to @node.handle, "#", title: (@node.selected ? "" : @node.popup_text) %>
</li>
