<h1>Listing expressions</h1>

<table>
  <tr>
    <th>Tag</th>
    <th>Referent</th>
    <th>Form</th>
    <th>Locality</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @expressions.each do |expression| %>
  <tr>
    <td><%= expression.tag_id %></td>
    <td><%= expression.referent_id %></td>
    <td><%= expression.form %></td>
    <td><%= expression.locality %></td>
    <td><%= link_to 'Show', expression %></td>
    <td><%= link_to 'Edit', edit_expression_path(expression) %></td>
    <td><%= link_to 'Destroy', expression, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

