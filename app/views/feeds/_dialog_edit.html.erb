<%# Fields for an edit-feed dialog %>
<%= modal_dialog :edit_feed, "Edit Feed" do %>
	<%= simple_form_for @feed, html: { class: "new_feed json", 'data-type' => :json } do |f| %>
		<%= modal_body do %>
		  <%= form_error_helper f %>
		  <%= f.input :title %>
		  <%= f.input :description, input_html: { cols: 125, rows: 1 } %>
		  <%= f.input :url, input_html: { cols: 125, rows: 1 } %>
		  <%= f.input :approved, :as => :boolean, :wrapper => :checkbox, :label => "Approved for feedthrough" %>
		  <%= f.input :feedtype, collection: Feed.feedtype_selection %>
		<% end %>
		<%= modal_footer do %>
			<%= f.button :submit, "Save" %>
		<% end %>
	<% end %>
<% end %>
