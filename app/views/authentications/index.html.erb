  <div class="auth_signin">
	<strong>Rather use a RecipePower account? <br><br></strong>
	<%= link_to("Sign up", new_user_registration_path) %>
	or
	<%= link_to("Sign In", new_user_session_path) %>
  </div>
<% end %>
