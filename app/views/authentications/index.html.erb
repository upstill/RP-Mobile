<% title "Sign In Options" %>
<%= render partial: 'shared/authentications_sidebar' %>

<h3><%= current_user ? "Manage Sign-in Services" : "Sign In" %></h3>
<%= render partial: 'shared/authentications_current' %>
<%= render partial: 'shared/authentications_possible' %>
