<!DOCTYPE html>
<html>
  <head>
		<title><%= title %></title>
		<%= favicon_link_tag "/assets/favicon.ico" %>
		<%= stylesheet_link_tag "collection" %>
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
		<%= javascript_include_tag "collection" %>
		<%= csrf_meta_tag %>
		<script type="text/javascript">
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-30180298-1']);
			_gaq.push(['_trackPageview']);

			(function() {
				var ga = document.createElement('script'); 
				ga.type = 'text/javascript'; 
				ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0];
				s.parentNode.insertBefore(ga, s);
			})();
		</script>
  </head>
  <body>
	<%= render 'layouts/frame_corner' %>
	<%= render 'layouts/frame_top' %>
	<%= render 'layouts/frame_left' %>
	<div class="content">
		<% if flash[:notice] %>
			<div id="notice" class="notice"><%= flash[:notice] %></div>
		<% elsif flash[:alert] %>
			<div class="alert"><%= flash[:alert] %></div>
		<% end %>
		<%= yield %>
	</div>
	</div class="modal"></div>
	</body>
</html>
