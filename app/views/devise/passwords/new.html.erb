<% if params[:area] && params[:area] == "at_top" %>
	<%= modal_dialog :password_reset, "Email Please", area: @area, modal: (@area != "page") && (@area != "at_top") do %>
		<%= render partial: "new_password_at_top" %>
	<% end %>
<% else %>
	<%= modal_dialog :password_reset, "Forgot your password?" do %>
		<%= simple_form_for resource, :as => resource_name, :url => password_path(resource_name), html: { class: "password_reset json", 'data-type' => :json } do |f| %>
			<%= form_errors_helper f %>
			<%= modal_body do %>
			  <%= f.input :login, label: "Username or Email (your choice)" %>
			<% end %>
			<%= modal_footer do %>
				<%= f.submit "Email instructions to reset password" %>
			<% end %>
		<% end %>
	<% end %>
<% end %>
